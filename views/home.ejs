<%- include('partials/header'); -%>

<h1>Home</h1>
<p><%= homeStartingContent %></p>

<% postContent.forEach(function(i){ %>
    <h1><%= i.postTitle %></h1>
    <% if(i.postContent.length >= 100){ %>
        <p><%= i.postContent.slice(0,100) %>...<a href="/posts/<%= i.postTitle %>">Read More</a></p>
    <% }else{ %>
        <p><%= i.postContent %></p>
    <% } %>
<% }) %>

<%- include('partials/footer'); -%>