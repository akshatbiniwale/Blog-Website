<%- include('partials/header'); -%>

<h1>Home</h1>
<p><%= homeStartingContent %></p>

<% postContent.forEach(function(i){ %>
    <h1><%= i.title %></h1>
    <% if(i.content.length >= 100){ %>
        <p><%= i.content.slice(0,100) %>...<a href="/posts/<%= i.title %>">Read More</a></p>
    <% }else{ %>
        <p><%= i.content %></p>
    <% } %>
<% }) %>

<%- include('partials/footer'); -%>